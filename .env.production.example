APP_ENV=production
DEBUG=false
PORT=8080

# 线上主模型（vLLM）
LLM_PRIMARY_BACKEND=vllm
VLLM_BASE_URL=http://vllm-service:8000/v1
VLLM_MODEL=Qwen/Qwen-7B

# 线上兜底（建议智谱）
LLM_FALLBACK_ENABLED=true
LLM_FALLBACK_BACKEND=zhipu
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPU_API_KEY=replace_with_real_key
ZHIPU_MODEL=glm-4-flash

# 生成约束：最少字数 + 主模型尝试次数（失败后自动兜底）
SCRIPT_MIN_CHARS=40
SCRIPT_PRIMARY_ATTEMPTS=2

# 达人/商品基础数据源（SQLite）
DOMAIN_DATA_ENABLED=true
DOMAIN_DATA_DB_PATH=/opt/script-agent/data/domain_data.db
DOMAIN_DATA_AUTO_INIT_SCHEMA=true

# 登录注册与前端安全
AUTH_DB_PATH=/opt/script-agent/data/auth_users.db
AUTH_TOKEN_EXPIRES_SECONDS=86400
AUTH_REGISTRATION_ENABLED=true
FRONTEND_EXPOSE_CONNECTION_PANEL=false

# 可选：生产环境前端/客户端透传 API Key 鉴权
# API_KEY_LIST=sk-prod-xxx,sk-prod-yyy
